<% if admin_signed_in?%>
  <h2>添加店面账号</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div>
      <%= f.label '账号' %><br />
      <%= f.text_field :username, :autofocus => true %>
    </div>

    <div>
      <%= f.label '邮箱' %><br />
      <%= f.email_field :email %>
    </div>

    <div>
      <%= f.label '密码' %><br />
      <%= f.password_field :password %>
    </div>
    <div><%= f.submit "创建" %></div>
  <% end %>
<% else %>
  <h2>注册</h2>
  <div>后台管理系统未开放注册</div>
<% end %>
<%= render "devise/shared/links" %>
